# ============================================
# Production Environment Template
# Backend Only Deployment on Digital Ocean Droplet
# ============================================

# ============================================
# DJANGO CORE SETTINGS
# ============================================
SECRET_KEY=your-super-secret-key-generate-with-python-manage-py-shell
DEBUG=False
ALLOWED_HOSTS=your_domain.com,www.your_domain.com,your_droplet_ip

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=autoparts_kenya_prod
DB_USER=autoparts_prod_user
DB_PASSWORD=generate-secure-password-here
DB_HOST=db
DB_PORT=5432

# ============================================
# REDIS & CELERY
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
REDIS_PASSWORD=redis_secure_password
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_ACCESS_TOKEN_LIFETIME=24h
JWT_REFRESH_TOKEN_LIFETIME=7d
JWT_ALGORITHM=HS256

# ============================================
# M-PESA PRODUCTION
# ============================================
MPESA_ENVIRONMENT=production
MPESA_CONSUMER_KEY=your-production-consumer-key
MPESA_CONSUMER_SECRET=your-production-consumer-secret
MPESA_BUSINESS_SHORTCODE=your-production-shortcode
MPESA_PASSKEY=your-production-passkey
MPESA_CALLBACK_URL=https://your_domain.com/api/v1/payments/mpesa-callback/
MPESA_TIMEOUT=30

# ============================================
# BUSINESS INFORMATION
# ============================================
STORE_NAME=AutoParts Kenya
STORE_PHONE=+254712345678
STORE_EMAIL=hello@autoparts.ke
STORE_CURRENCY=KSh
STORE_CURRENCY_CODE=KES

# ============================================
# DELIVERY CONFIGURATION
# ============================================
DELIVERY_BASE_RATE=200
DELIVERY_MAX_DAYS=3
DELIVERY_BASE_CITY=Nairobi

# ============================================
# CORS & SECURITY
# ============================================
CORS_ALLOWED_ORIGINS=https://your_frontend_domain.com,https://www.your_frontend_domain.com
CORS_ALLOW_CREDENTIALS=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================
# LOGGING
# ============================================
DJ_LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/django.log

# ============================================
# STATIC & MEDIA
# ============================================
STATIC_URL=/static/
MEDIA_URL=/media/
